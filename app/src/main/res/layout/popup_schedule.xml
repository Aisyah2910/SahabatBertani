<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".popup_schedule"
    android:background="@drawable/popup_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Ubah Jadwal Penyiraman"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/first_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Penyiraman pertama (HH:mm)"
        android:inputType="time" />

    <EditText
        android:id="@+id/second_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Penyiraman kedua (HH:mm)"
        android:inputType="time"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/third_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Penyiraman ketiga (HH:mm)"
        android:inputType="time"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Update" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batal" />
    </LinearLayout>
</LinearLayout>
